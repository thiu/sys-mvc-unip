@model IEnumerable<SistemaMVC.Models.Tarefas>

@{
    ViewBag.Title = "Tarefas";
}

<div class="conteudo">

    <div class="jumbotron">
        <h1>Tarefas</h1>
        <p class="lead">Visualize seu relatório de tarefas abaixo.</p>
        <p><a class="btn btn-info" href="@Url.Action("Create", "Tarefas")">Adicionar tarefa &raquo;</a></p>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeTarefa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoTarefa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataTarefa)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeTarefa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoTarefa)
                </td>
                <td>
                    @item.DataTarefa.ToString("dd/MM/yyyy")
                </td>
                
                <td width="80px">
                    <a href="@Url.Action("Edit", new {  id=item.Id })"><img src="~/Dados/editar.svg" /></a>
                    <a href="@Url.Action("Delete", new {  id=item.Id })"><img src="~/Dados/deletar.svg" /></a>
                        
                        @*@Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |*@
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
        }

    </table>

</div>